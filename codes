<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SusGPT Chatbot</title>
    <style>
        body { background-color: #001F3F; color: white; font-family: Arial, sans-serif; text-align: center; }
        #chatBox { width: 300px; height: 400px; background-color: #002F5F; border-radius: 10px; padding: 10px; margin: auto; overflow-y: auto; }
        input { width: 90%; padding: 5px; }
    </style>
</head>
<body>
    <h1>SusGPT Chatbot</h1>
    <div id="chatBox">
        <p>Hello! I am SusGPT, your AI assistant. How can I help?</p>
    </div>
    <input type="text" id="userInput" placeholder="Type a message...">
    <script>
        class SusGPT {
            async getResponse(userInput) {
                const responses = {
                    "hello": "Hi there! How can I assist you?",
                    "who are you": "I am SusGPT, an AI assistant with intelligence, kindness, and research skills!",
                    "what can you do": "I can answer questions, assist with research, and provide insights!"
                };
                return responses[userInput.toLowerCase()] || "I'm still learning! Ask me anything!";
            }
        }
        const susGPT = new SusGPT();
        document.getElementById("userInput").addEventListener("keypress", async (event) => {
            if (event.key === "Enter") {
                const chatBox = document.getElementById("chatBox");
                const userMessage = event.target.value;
                if (userMessage.trim() !== "") {
                    const response = await susGPT.getResponse(userMessage);
                    chatBox.innerHTML += `<p><strong>You:</strong> ${userMessage}</p>`;
                    chatBox.innerHTML += `<p><strong>SusGPT:</strong> ${response}</p>`;
                    event.target.value = "";
                    chatBox.scrollTop = chatBox.scrollHeight;
                }
            }
        });
    </script>
</body>
</html>
